<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--**********************************************
                     Dialog /Loading
    ***********************************************-->

    <attr name="benchmarkui_dialog_background_dim_amount" format="float" />

    <attr name="benchmarkui_dialog_radius_size" type="attr" />

    <attr name="benchmarkui_dialog_loading_min_size" format="dimension" />

    <attr name="benchmarkui_dialog_loading_padding_size" format="dimension" />

    <attr name="benchmarkui_loading_view_size" format="dimension" />

    <attr name="benchmarkui_loading_view_width" format="dimension" />

    <attr name="benchmarkui_loading_margin_size" format="dimension" />

    <attr name="chrysanthemum_loading_view_size" format="dimension" />

    <attr name="chrysanthemum_dialog_min_size_phone" format="dimension" />

    <!--**********************************************
                          TextView
    ***********************************************-->

    <attr name="benchmarkui_config_size_explain_text" format="dimension" />

    <attr name="benchmarkui_config_color_explain_text" format="color" />

    <!--**********************************************
                         splash
    **********************************************-->
    <!--启动页背景-->
    <attr name="benchmarkui_config_color_splash_bg" format="reference" />
    <!--启动页上的应用图标-->
    <attr name="benchmarkui_config_splash_app_logo" format="reference" />
    <!--启动页上应用图标距离下端的距离-->
    <attr name="benchmarkui_config_app_logo_bottom" format="dimension" />
    <!--启动页上公司的标志-->
    <attr name="benchmarkui_config_splash_company_logo" format="reference" />
    <!--启动页上公司的标志距离下端的距离-->
    <attr name="benchmarkui_config_company_logo_bottom" format="dimension" />

    <attr name="benchmarkui_guide_btn_padding_horizontal" format="float" />
    <attr name="benchmarkui_guide_btn_padding_vertical" format="float" />
    <attr name="benchmarkui_guide_btn_margin_bottom" format="float" />

    <!--**********************************************
    *                  xui btn                      *
    **********************************************-->
    <!-- android 5.0以下不能再selector中用?attr,必须要整个drawable由使用者提供 -->
    <attr name="benchmarkui_round_btn_bg_color" format="color" />
    <attr name="benchmarkui_round_btn_border_color" format="color" />
    <attr name="benchmarkui_round_btn_text_color" format="color" />

    <attr name="benchmarkui_btn_view_radius" format="dimension" />
    <attr name="benchmarkui_btn_view_width" format="dimension" />
    <attr name="benchmarkui_btn_view_height" format="dimension" />
    <attr name="benchmarkui_btn_view_text_size" format="dimension" />
    <attr name="benchmarkui_btn_view_border_width" format="dimension" />

    <attr name="benchmarkui_config_icon_drawable_padding" format="dimension" />

    <attr name="benchmarkui_config_content_spacing_horizontal" format="dimension" /> <!-- margin 和 padding 等使用的内容通用水平间距 -->
    <attr name="benchmarkui_config_content_spacing_vertical" format="dimension" /> <!-- margin 和 padding 等使用的内容通用垂直间距 -->
    <attr name="benchmarkui_config_simple_list_item_height" format="dimension" />
    <attr name="benchmarkui_config_simple_list_icon_size" format="dimension" />

    <!-- 自定义按钮控件 ButtonView -->
    <declare-styleable name="ButtonView">
        <!-- 按钮的填充颜色，默认Color.TRANSPARENT -->
        <attr name="textSolidColor" format="color" />
        <!-- 按钮的选中颜色，默认Color.TRANSPARENT -->
        <attr name="textSelectedSolidColor" format="color" />
        <!-- 按钮的边框颜色，默认Color.TRANSPARENT -->
        <attr name="textStrokeColor" format="color" />
        <!-- 按钮的边框的宽度，默认0-->
        <attr name="textStrokeWidth" format="dimension" />
        <!-- 按钮的边角角度，默认0 -->
        <attr name="textRadius" format="dimension" />
        <attr name="textLeftTopRadius" format="dimension" />
        <attr name="textLeftBottomRadius" format="dimension" />
        <attr name="textRightTopRadius" format="dimension" />
        <attr name="textRightBottomRadius" format="dimension" />
        <!-- 按钮的图标 -->
        <attr name="textDrawable" format="reference" />
        <!-- 按钮的文字的颜色，默认Color.TRANSPARENT-->
        <attr name="textNormalTextColor" format="color" />
        <!-- 按钮的文字点击时的颜色，默认Color.TRANSPARENT-->
        <attr name="textSelectedTextColor" format="color" />
    </declare-styleable>

    <!-- 圆形按钮 -->
    <declare-styleable name="RoundButton">
        <!-- 背景颜色-->
        <attr name="rb_backgroundColor" format="reference" />
        <!-- 边框颜色 -->
        <attr name="rb_borderColor" format="reference" />
        <!-- 边框宽度，默认1dp -->
        <attr name="rb_borderWidth" format="dimension" />
        <attr name="rb_isRadiusAdjustBounds" format="boolean" />
        <!-- 圆角弧度，默认5dp -->
        <attr name="rb_radius" format="dimension" />
        <attr name="rb_radiusTopLeft" format="dimension" />
        <attr name="rb_radiusTopRight" format="dimension" />
        <attr name="rb_radiusBottomLeft" format="dimension" />
        <attr name="rb_radiusBottomRight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SuperButton">
        <attr name="sGravity" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="top" value="3" />
            <enum name="bottom" value="4" />
        </attr>

        <attr name="sShapeType" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="oval" value="1" />
            <enum name="line" value="2" />
            <enum name="ring" value="3" />
        </attr>

        <attr name="sSolidColor" format="color" />

        <attr name="sSelectorPressedColor" format="color" />
        <attr name="sSelectorDisableColor" format="color" />
        <attr name="sSelectorNormalColor" format="color" />

        <attr name="sCornersRadius" format="dimension" />

        <attr name="sCornersTopLeftRadius" format="dimension" />
        <attr name="sCornersTopRightRadius" format="dimension" />
        <attr name="sCornersBottomLeftRadius" format="dimension" />
        <attr name="sCornersBottomRightRadius" format="dimension" />

        <attr name="sStrokeWidth" format="dimension" />
        <attr name="sStrokeDashWidth" format="dimension" />
        <attr name="sStrokeDashGap" format="dimension" />
        <attr name="sStrokeColor" format="color" />

        <attr name="sSizeWidth" format="dimension" />
        <attr name="sSizeHeight" format="dimension" />

        <attr name="sGradientOrientation" format="enum">
            <enum name="TOP_BOTTOM" value="0" />
            <enum name="TR_BL" value="1" />
            <enum name="RIGHT_LEFT" value="2" />
            <enum name="BR_TL" value="3" />
            <enum name="BOTTOM_TOP" value="4" />
            <enum name="BL_TR" value="5" />
            <enum name="LEFT_RIGHT" value="6" />
            <enum name="TL_BR" value="7" />
        </attr>

        <attr name="sGradientAngle" format="dimension" />
        <attr name="sGradientCenterX" format="dimension" />
        <attr name="sGradientCenterY" format="dimension" />
        <attr name="sGradientGradientRadius" format="dimension" />
        <attr name="sGradientStartColor" format="color" />
        <attr name="sGradientCenterColor" format="color" />
        <attr name="sGradientEndColor" format="color" />
        <attr name="sGradientUseLevel" format="boolean" />

        <attr name="sUseSelector" format="boolean" />

        <attr name="sGradientType" format="enum">
            <enum name="linear" value="0" />
            <enum name="radial" value="1" />
            <enum name="sweep" value="2" />
        </attr>

    </declare-styleable>

    <!--**********************************************
                       list item bg
    **********************************************-->
    <attr name="benchmarkui_config_separator_height" format="dimension" />

    <!--**********************************************
                       ImageView
    **********************************************-->
    <declare-styleable name="BezierBannerView">
        <attr name="bbv_selectedColor" format="color" />
        <attr name="bbv_unSelectedColor" format="color" />
        <attr name="bbv_selectedRadius" format="dimension" />
        <attr name="bbv_unSelectedRadius" format="dimension" />
        <attr name="bbv_spacing" format="dimension" />
    </declare-styleable>

    <!--============================Banner=========================================-->

    <!-- BaseBanner -->
    <declare-styleable name="BaseBanner">
        <!-- Banner高宽比,范围0-1,默认0.5(for LoopViewPager)-->
        <attr name="bb_scale" format="float" />
        <!--for LoopViewPager start-->
        <!-- 是否支持循环,默认true-->
        <attr name="bb_isLoopEnable" format="boolean" />
        <!-- 滚动延时,默认5秒-->
        <attr name="bb_delay" format="integer" />
        <!-- 滚动间隔,默认5秒-->
        <attr name="bb_period" format="integer" />
        <!-- 是否支持自动滚动,默认true-->
        <attr name="bb_isAutoScrollEnable" format="boolean" />
        <!--for LoopViewPager end-->
        <!-- 设置底部背景条颜色,默认透明 -->
        <attr name="bb_barColor" format="color" />
        <!-- 设置当滚动到最后一个item时是否显示底部背景条 -->
        <attr name="bb_isBarShowWhenLast" format="boolean" />
        <!-- 设置底部背景条padding,单位dp -->
        <attr name="bb_barPaddingLeft" format="dimension" />
        <attr name="bb_barPaddingTop" format="dimension" />
        <attr name="bb_barPaddingRight" format="dimension" />
        <attr name="bb_barPaddingBottom" format="dimension" />
        <!-- 设置标题文字颜色,默认"#ffffff" -->
        <attr name="bb_textColor" format="color" />
        <!-- 设置标题文字大小,单位sp,默认14sp -->
        <attr name="bb_textSize" format="dimension" />
        <!-- 设置是否显示标题,默认true  -->
        <attr name="bb_isTitleShow" format="boolean" />
        <!-- 设置是否显示指示器,默认true  -->
        <attr name="bb_isIndicatorShow" format="boolean" />
        <!-- 设置指示器位置.默认Gravity.CENTER时文字不显示-->
        <attr name="bb_indicatorGravity" format="enum">
            <enum name="CENTER" value="17" />
            <enum name="LEFT" value="3" />
            <enum name="RIGHT" value="5" />
        </attr>
    </declare-styleable>

    <!-- BaseIndicatorBanner -->
    <declare-styleable name="BaseIndicatorBanner">
        <!-- 设置指示器样式 -->
        <attr name="bb_indicatorStyle" format="enum">
            <!--图片资源-->
            <enum name="DRAWABLE_RESOURCE" value="0" />
            <!--矩形-->
            <enum name="CORNER_RECTANGLE" value="1" />
        </attr>
        <!-- 设置指示器宽度,单位dp,默认6dp -->
        <attr name="bb_indicatorWidth" format="dimension" />
        <!-- 设置指示器高度,单位dp,默认6dp -->
        <attr name="bb_indicatorHeight" format="dimension" />
        <!-- 设置指示器间距,单位dp,默认6dp -->
        <attr name="bb_indicatorGap" format="dimension" />
        <!-- 设置指示器选中颜色,默认"#ffffff" -->
        <attr name="bb_indicatorSelectColor" format="color" />
        <!-- 设置指示器未选中颜色,默认"#88ffffff"  -->
        <attr name="bb_indicatorUnselectColor" format="color" />
        <!-- 设置指示器圆角弧度,单位dp,默认3dp -->
        <attr name="bb_indicatorCornerRadius" format="dimension" />
        <!-- 设置指示器选中drawable资源 -->
        <attr name="bb_indicatorSelectRes" format="reference" />
        <!-- 设置指示器未选中drawable资源 -->
        <attr name="bb_indicatorUnselectRes" format="reference" />
    </declare-styleable>

    <!--=====================================================================-->

</resources>