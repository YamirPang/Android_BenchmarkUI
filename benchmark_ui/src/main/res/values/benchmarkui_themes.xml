<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="RootTheme" parent="AppBaseTheme">

        <!--**********************************************
        *                   xui color                   *
        ***********************************************-->
        <!-- CheckBox，RadioButton，SwitchCompat等一般控件的选中效果默认采用该颜色 -->
        <item name="colorAccent">@color/config_color_main_theme</item>
        <!--应用的主要色调，actionBar默认使用该颜色，Toolbar导航栏的底色-->
        <item name="colorPrimary">@color/config_color_main_theme</item>
        <!--应用的主要暗色调，statusBarColor默认使用该颜色-->
        <item name="colorPrimaryDark">@color/config_color_main_theme</item>

        <!--无Title-->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="BM_UI_Theme" parent="RootTheme" />

    <!--窗体背景，这个背景能在第一时间显示, 避免启动时白屏，黑屏问题-->
    <style name="BM_UI_Theme.Launch">
        <item name="benchmarkui_config_color_splash_bg">@color/config_color_white</item>
        <item name="benchmarkui_config_app_logo_bottom">@dimen/config_app_logo_bottom</item>
        <item name="benchmarkui_config_company_logo_bottom">@dimen/config_company_logo_bottom</item>
        <item name="android:windowBackground">@drawable/benchmarkui_config_preview_window</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="BM_UI_Theme.Phone">
        <!--*********************************************
        *                  Dialog                       *
        **********************************************-->
        <item name="benchmarkui_dialog_radius_size">@dimen/benchmarkui_dialog_radius_size_phone</item>
        <item name="benchmarkui_dialog_loading_padding_size">@dimen/benchmarkui_dialog_loading_padding_size_phone</item>
        <item name="benchmarkui_dialog_loading_min_size">@dimen/benchmarkui_dialog_loading_min_size_phone</item>
        <item name="benchmarkui_loading_view_size">@dimen/benchmarkui_loading_view_size_phone</item>
        <item name="benchmarkui_loading_view_width">@dimen/benchmarkui_loading_view_width_phone</item>
        <item name="benchmarkui_loading_margin_size">@dimen/benchmarkui_loading_margin_size_phone</item>
        <item name="chrysanthemum_loading_view_size">@dimen/loading_view_size_phone</item>

        <item name="chrysanthemum_dialog_min_size_phone">@dimen/benchmarkui_chrysanthemum_dialog_min_size_phone</item>

        <!-- 加载框背景蒙版透明度 -->
        <item name="benchmarkui_dialog_background_dim_amount">0.1</item>

        <item name="benchmarkui_config_size_explain_text">@dimen/benchmarkui_config_size_explain_text_phone</item>
        <item name="benchmarkui_config_color_explain_text">@color/benchmarkui_config_font_color_gray</item>
    </style>

</resources>